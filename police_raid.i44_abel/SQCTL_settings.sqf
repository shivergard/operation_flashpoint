comment { SQUAD CONTROL SETTINGS };

comment { 
//	DEFAULT MENU
// 	Set to true if you want groups to be displayed first when opening the menu
// 	False to show squads as default
};
SQCTL set [ 7, false ];

comment { 
//	TRACKER 
// 	Set to true to display map markers following both squads under
// 	your control and detected enemy squads
// 	False to deactivate it
};
SQCTL set [ 10, true ];

comment { 
//	ADVANCED ORDERS MENU 
// 	Set to true to display the advanced orders menu by default
};
SQCTL set [ 11, false ];

comment { 
//	FLEEING
// 	Set to true to squads under your control to flee
// 	False to not allow fleeing
};
SQCTL set [ 12, false ];

comment { 
//	POINT SQUAD
// 	Set to true to make one squad to become point when in formation
// 	False to no point
};
SQCTL set [ 13, true ];